<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_dangnhap"
        android:layout_alignRight="@+id/btn_dangnhap"
        android:layout_below="@+id/btn_dangnhap"
        android:text="ĐĂNG KÝ"
        android:background="@null"
        android:textColor="#333333" />

    <Button
        android:id="@+id/thanhvien_dangxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_dk"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn_dk"
        android:text="ĐĂNG XUẤT"
        android:background="@drawable/button_selector_dangxuat"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp" />

    <Button
        android:id="@+id/btn_dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hello"
        android:layout_marginTop="64dp"
        android:text="ĐĂNG NHẬP"
        android:background="@drawable/button_selector_primary"
		android:textColor="#FFFFFF"
		android:textStyle="bold" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_taoCsdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thanhvien_dangxuat"
        android:layout_alignRight="@+id/thanhvien_dangxuat"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_selector_secondary"
        android:padding="15dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="TẠO CSDL"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
